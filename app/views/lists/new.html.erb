<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Add a new List</h1> <!-- set mb-0 to remove bottom margin -->
  </div>

  <%= form_with model: @list, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', style: 'width: 30%;', placeholder: 'Type the name of the list here ...' %> <!-- added placeholder -->
    </div>

    <!-- New section for photo upload -->
    <div class="mb-3">
      <%= f.label :photo, "Upload a photo for the list" %>
      <%= f.file_field :photo, class: 'form-control', style: 'width: 30%;' %>
    </div>

    <div class="d-flex justify-content-between"> <!-- flexbox for buttons -->
      <%= f.submit 'Create List', class: 'btn btn-primary' %>
      <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary ms-2' %> <!-- back to lists button -->
    </div>
  <% end %>
</div>
