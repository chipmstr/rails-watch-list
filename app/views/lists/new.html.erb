<div class="container mt-4"> <!-- added container for consistent width -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Add a new List</h1> <!-- set mb-0 to remove bottom margin -->
  </div>

  <%= form_with model: @list, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Enter list name' %>
    </div>

    <div class="d-flex justify-content-between"> <!-- flexbox for buttons -->
      <%= f.submit 'Create List', class: 'btn btn-primary' %>
      <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary ms-2' %> <!-- back to lists button -->
    </div>
  <% end %>
</div>
