<%= form_with(model: [@movie, review], local: false) do |form| %>
  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 1..5, step: 0.5, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment, required: true %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit Review", class: "btn btn-primary" %>
  </div>
<% end %>
