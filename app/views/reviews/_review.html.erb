<div class="p-3" style="background-color: <%= cycle('#f0f0f0', '#ffffff') %>; border-bottom: 1px solid #ccc;"> <!-- alternating background colors for each review -->
  <p><strong>Rating:</strong> <%= number_with_precision(review.rating, precision: 1) %>/5</p>
  <p><strong>Comment:</strong> <%= review.comment %></p>
  <% if review.created_at.present? %>
    <p class="text-muted"><small>Posted on <%= review.created_at.in_time_zone("Berlin").strftime("%d.%m.%Y %H:%M") %></small></p> <!-- display creation date in Berlin time with specified format -->
  <% else %>
    <p class="text-muted"><small>Posted: Date not available</small></p>
  <% end %>
</div>
