<div class="container mt-4"> <!-- added container for consistent width -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Available Movies</h1> <!-- movie title -->
    <div>
      <%= link_to '<i class="fas fa-plus"></i> Create a new Movie'.html_safe, new_movie_path, class: 'btn btn-success me-2' %> <!-- link to create a new movie -->
      <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %> <!-- link back to lists -->
    </div>
  </div>

  <div class="row">
    <% @movies.each do |movie| %> <!-- iterate through each movie -->
      <div class="col-md-3 mb-4">
        <div class="card h-100 shadow"> <!-- card for each movie -->
          <img class="card-img-top" src="<%= movie.poster_url %>" alt="<%= movie.title %>" class="img-fluid" /> <!-- movie poster image -->
          <div class="card-body d-flex flex-column" style="justify-content: space-between;"> <!-- use flexbox for vertical alignment -->
            <div>
              <h5 class="card-title"><%= movie.title %></h5> <!-- movie title -->
              <div class="rating-stars mb-2"> <!-- stars for rating -->
                <% rating = movie.rating %> <!-- get the movie rating -->
                <% (1..5).each do |i| %> <!-- loop through 1 to 5 stars -->
                  <% half_star = (i <= rating) ? 'fas fa-star' : (i == rating + 0.5 ? 'fas fa-star-half-alt' : 'far fa-star') %> <!-- determine star type -->
                  <i class="<%= half_star %>" style="color: gold; font-size: 1.5rem;"></i> <!-- set color and size for stars -->
                <% end %>
              </div>
            </div>
            <%= link_to 'View', movie_path(movie), class: 'btn btn-primary' %> <!-- link to view movie details -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
