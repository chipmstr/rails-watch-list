<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Available Movies</h1>
    <div>
      <%= link_to '<i class="fas fa-plus"></i> Create a new Movie'.html_safe, new_movie_path, class: 'btn btn-success me-2' %>
      <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4"> <!-- responsive collumns for different displays -->
        <div class="card h-100 shadow">
          <img class="card-img-top" src="<%= movie.poster_url %>" alt="<%= movie.title %>" class="img-fluid" style="height: auto; width: 100%; object-fit: contain;" /> <!-- Adjusted -->
          <div class="card-body d-flex flex-column" style="justify-content: space-between;">
            <div>
              <h5 class="card-title"><%= movie.title %></h5>
              <div class="rating-stars mb-2">
                <% rating = movie.rating %>
                <% (1..5).each do |i| %>
                  <% half_star = (i <= rating) ? 'fas fa-star' : (i == rating + 0.5 ? 'fas fa-star-half-alt' : 'far fa-star') %>
                  <i class="<%= half_star %>" style="color: gold; font-size: 1.2rem;"></i>
                <% end %>
              </div>
            </div>
            <%= link_to 'View', movie_path(movie), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
