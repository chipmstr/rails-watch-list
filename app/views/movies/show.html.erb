<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @movie.title %></h1> <!-- display the movie title -->
    <%= link_to 'Back to Movies', movies_path, class: 'btn btn-secondary' %> <!-- back to movies button at top right -->
  </div>

  <img src="<%= @movie.poster_url %>" alt="<%= @movie.title %> poster" class="img-fluid" style="max-height: 400px; object-fit: cover;" /> <!-- display the movie poster -->

  <p><strong>Overview:</strong> <%= @movie.overview %></p> <!-- display the movie overview -->
  <p><strong>Rating:</strong>
    <div class="rating-stars mb-2"> <!-- container for rating stars -->
      <% rating = @movie.rating %> <!-- use the rating directly -->
      <% (1..5).each do |i| %>
        <% half_star = (i <= rating) ? 'fas fa-star' : (i == rating + 0.5 ? 'fas fa-star-half-alt' : 'far fa-star') %> <!-- determine star type -->
        <i class="<%= half_star %>" style="color: gold; font-size: 1.5rem;"></i> <!-- set color and size for stars -->
      <% end %>
    </div>
  </p>

  <div class="mt-3"> <!-- container for action buttons -->
    <%= link_to 'Edit', edit_movie_path(@movie), class: 'btn btn-warning' %> <!-- edit button -->
  </div>
</div>
