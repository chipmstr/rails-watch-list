<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Add a new Movie</h1> <!-- set margin-bottom to 0 to remove extra space -->
    <div>
      <%= link_to 'Back to Movies', movies_path, class: 'btn btn-secondary' %> <!-- back to movies button -->
    </div>
  </div>

  <%= form_with model: @movie, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :title %> <!-- label for title -->
      <%= f.text_field :title, class: 'form-control', placeholder: 'Enter movie title', style: 'width: 45%;' %> <!-- input field for title with custom width -->
    </div>

    <div class="mb-3">
      <%= f.label :overview %> <!-- label for overview -->
      <%= f.text_area :overview, class: 'form-control', placeholder: 'Enter movie overview', style: 'width: 45%;' %> <!-- textarea for overview with custom width -->
    </div>

    <div class="mb-3">
      <%= f.label :poster_url %> <!-- label for poster URL -->
      <%= f.text_field :poster_url, class: 'form-control', placeholder: 'Enter poster URL', style: 'width: 45%;' %> <!-- input field for poster URL with custom width -->
    </div>

    <div>
      <%= f.submit 'Create Movie', class: 'btn btn-primary' %> <!-- submit button to create movie -->
    </div>
  <% end %>
</div>
