<%= form_with model: [@movie, review], local: false do |f| %>
  <div class="mb-3">
    <%= f.label :rating, "Your Rating:" %>
    <div class="d-flex align-items-center">
      <%= f.range_field :rating, class: 'form-range', min: 1, max: 5, step: 0.5, id: "rating-slider", style: "width: 70%;" %>
      <span id="rating-value" class="ms-2">3/5</span>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :comment, "Your Review" %>
    <%= f.text_area :comment, class: 'form-control', placeholder: "Leave a comment...", style: 'width: 100%;', required: true %>
  </div>

  <div>
    <%= f.submit "Submit Review", class: "btn btn-primary" %>
  </div>
<% end %>
